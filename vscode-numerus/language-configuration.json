{
  "comments": {
    "lineComment": "NOTA:"
  },
  "brackets": [
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"", "notIn": ["string"] }
  ],
  "surroundingPairs": [
    ["(", ")"],
    ["\"", "\""]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*NOTA:\\s*═+",
      "end": "^\\s*NOTA:\\s*═+"
    }
  },
  "wordPattern": "[A-Za-z_][A-Za-z0-9_]*"
}
